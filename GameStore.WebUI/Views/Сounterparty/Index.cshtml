@model IEnumerable<GameStore.Domain.Entities.Сounterparty>

@{ ViewBag.Title = "Сounterparty";
    Layout = "~/Views/Shared/_BaseLayout.cshtml"; }

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список контрагентов</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Номер договора ККМ</th>
                <th class="text-right">Наименование</th>
                <th class="text-center">Тип</th>
                <th class="text-center">ИНН</th>
                <th class="text-center">Номер договора ЕГАИС</th>
                <th class="text-center">Дата договора ЕГАИС</th>
                <th class="text-center">Номер телефона</th>
                <th class="text-center">email</th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td class="text-right">@item.id_counterparty</td>
            <td class="text-right">@item.nomDogKKM</td>
            <td>@Html.ActionLink(item.name, "Edit", new { item.id_counterparty })</td>
            @*<td class="text-right">@item.name</td>*@
            <td class="text-right">@item.type</td>
            <td class="text-right">@item.inn</td>
            <td class="text-right">@item.nomDogEGAIS</td>
            <td class="text-right">@item.dateDogEGAIS</td>
            <td class="text-right">@item.phoneNumber</td>
            <td class="text-right">@item.email</td>
            <td class="text-center">
                @using (Html.BeginForm("Delete", "Сounterparty"))
                {
                    @Html.Hidden("id_counterparty", item.id_counterparty)
                    <input type="submit"
                           class="btn btn-default btn-xs"
                           value="Удалить" />}
            </td>
        </tr>
            }
        </table>
        <div class="panel-footer">
            @Html.ActionLink("Добавить контрагента", "Create", null,
                                    new { @class = "btn btn-default" })
        </div>
    </div>
</div>
